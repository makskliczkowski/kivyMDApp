#: import gch kivy.utils.get_color_from_hex
#: import PieChartLine libs.baseclass.pie_chart_line.PieChartLine


<MyBudgetsScreen>
    id:budget_screen
    MDBoxLayout:
        id: lst
        orientation : 'vertical'
        MDGridLayout:
            cols : 1
            width : self.parent.width
            row_force_default : True
            row_default_height : dp(120)
            height : dp(140)
            size_hint: None, None
            MDBoxLayout:
                cols : 2
                spacing: dp(10)
                size_hint : (1, 0.05)
                pos_hint : {'center_x': 0.5}
                width : root.width
                orientation : 'vertical'
                MySeeAllButton :
                    id : queryme
                    icon : 'eye'
                    size: self.parent.size  # important!
                    pos: self.parent.pos  # important
                    minimum_width : self.parent.width/2
                    width : self.parent.width/2
                    on_release : budget_screen.printQuery()      
