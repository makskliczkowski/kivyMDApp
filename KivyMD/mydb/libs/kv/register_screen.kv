#: import environ os.environ
#: import gch kivy.utils.get_color_from_hex
#: import MyTextField libs.baseclass.register_screen.MyTextField 

<MyRegisterScreen>
    canvas:
        Color:
            rgba: gch("#2E83F2")
        Rectangle:
            pos: self.pos
            size: self.size
    ScrollView:
        id: reg_scroll
        MDBoxLayout:
            adaptive_height: True
            orientation: "vertical"
            spacing: dp(50)
            padding: dp(30)
            pos_hint: {"center_x": .5}

            Image:
                source: f"{environ['MYDB_ROOT']}/assets/images/logo.png"
                pos_hint: {"center_x": .5}
                size_hint: None, None
                size: self.texture_size

            MDBoxLayout:
                adaptive_height: True
                orientation: "vertical"
                spacing: dp(15)
                
                MDTextField:
                    id: username
                    hint_text: "Username"
                    icon_right : "account"
                    color_active:app.theme_cls.primary_light
                MDTextField:
                    id:pw
                    icon_right : "eye-off"
                    hint_text: "Password"
                    color_active:app.theme_cls.primary_light
                    password: True
                    password_mask: "â€¢"
                MDRoundFlatButton:
                    id:login
                    text: "Log in"
                    type: "large"
                    font_size: 20
                    pos_hint:{"center_x":0.5}
                    on_press: root.logger()

            MDBoxLayout:
                adaptive_height: True
                orientation: "vertical"
                spacing: dp(5)

                MDIconButton:
                    icon: 'fingerprint'
                    pos_hint: {"center_x": .5}
                    user_font_size: dp(75)
                    _no_ripple_effect: True
                    on_release: 
                        root.rootLogin()
                        root.parent.current = "rootScreen"

                MDTextButton:
                    text: "Or Login with Touch ID"
                    pos_hint: {"center_x": .5}
                    type:"large"
                    user_font_size: dp(120)
                    color: gch("#F2CB05")


<MyTextField>
    height: "30dp"
    mode: 'fill'
    color_mode: 'custom'
    helper_text_mode: "persistent"
    normal_color: app.theme_cls.accent_color
    color_active: 1, 0, 0, 1
    icon_left : 'plus'
    current_hint_text_color : gch("#2E83F2")
    color : gch("#2E83F2")