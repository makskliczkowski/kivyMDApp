<FoodScreen>
    id : food_screen

    MDBoxLayout:
        #cols : 1
        id: lst
        orientation : 'vertical'
        #rows : 4
        #size_hint : (1,1)
        #row_force_default : True
        #adaptive_height: True
        MDGridLayout:
            cols : 4
            id : elements
            row_force_default : True
            row_default_height : dp(60)
            height : dp(60)
            size_hint : (1, None)
            adaptive_height: False
            #canvas:
            #    Color:
            #        rgba: gch("#FE83F2")
            #    Rectangle:
            #        pos: self.pos
            #        size: self.size             
            FoodCheckBox:
                id : fst
                text : list(root.cols.keys())[1]
            FoodCheckBox:
                id : snd
                text : list(root.cols.keys())[2]
            FoodCheckBox:
                id : third
                text : list(root.cols.keys())[3]
            FoodCheckBox :
                id : fourth
                text : list(root.cols.keys())[4]

        MDGridLayout:
            cols : 5
            rows : 1
            row_force_default : True
            row_default_height : dp(60)
            height : dp(60)
            size_hint : (1, None)
            adaptive_height: False

            #canvas:
            #    Color:
            #        rgba: gch("#EE83F2")
            #    Rectangle:
            #        pos: self.pos
            #        size: self.size      
            id : search
            MySearchBox : 
                id : fstSearch
                name : list(root.cols.keys())[1]

            MySearchBox : 
                id : sndSearch
                name : list(root.cols.keys())[2]

            MySearchBox :
                id : thrdSearch
                name : list(root.cols.keys())[3]

            MySearchBox : 
                id : fourthSearch
                name : list(root.cols.keys())[4]

        MDGridLayout:
            cols : 1
            width : self.parent.width
            row_force_default : True
            row_default_height : dp(120)
            height : dp(120)
            size_hint: None, None

            MDBoxLayout:
                cols : 2
                spacing: dp(10)
                size_hint : (1, 0.05)
                pos_hint : {'center_x': 0.5}
                width : root.width
                orientation : 'vertical'
                MySeeAllButton :
                    id : queryme
                    icon : 'eye'
                    size: self.parent.size  # important!
                    pos: self.parent.pos  # important
                    minimum_width : self.parent.width/2
                    width : self.parent.width/2
                    on_release : food_screen.printQuery()
                MySeeAllButton :
                    id : modify
                    width : self.parent.width/2
                    minimum_width : self.parent.parent.width/2
                    #on_release : food_screen.printQuery()
        ScrollView:
            id : scroll
            # here we can set bar color
            bar_color: [0, 0, 255, 1]
            do_scroll_y : True
            size: self.size
            # here we can set bar width
            bar_width: 40
            #always_overscroll : True
            MDBoxLayout:
                id : scrollbox
<FoodCheckBox>
    id : foodbox
    spacing : dp(30)
    MDCheckbox:
        id : switch
        active : True
        on_press : 
            foodbox.parent.parent.parent.clickCheckBox(root.text, self.active)

    MDLabel:
        color : gch("#0E1259")
        valign: 'middle'
        halign: 'center'
        text : root.text